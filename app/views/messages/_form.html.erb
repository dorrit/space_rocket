<%= flash[:notice] %>
<%= flash[:alert] %>

<h1>New message</h1>


<%= form_for @message do |f| %>
  <%= f.label 'Recipient' %>
  <%= f.collection_select(:recipient_id, @rocketeers, :id, :full_name, {}, :multiple => false)%>
  <%= f.label :subject%>
  <%= f.text_field :subject %>
  <%= f.label :text %>
  <%= f.text_field :text %>
  <br>
    Public
    <%= f.check_box :public %>
  <br><br>
  <%= f.submit %>
<% end %>
